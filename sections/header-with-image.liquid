<section id="header-with-image-section" style="display: flex; width: 100%; position: relative;">
  <!-- Left half with text content -->
  <div
    class="header-text"
    style="width: 50%; background-color: {{ section.settings.left_background_color }}; padding: 20px; position: relative; z-index: 2;"
  >
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'page_title' %}
          <h1 style="font-size: 12rem; opacity: 0.4; margin: 0;">
            {{ block.settings.title }}
          </h1>
        {% when 'description' %}
          <p style="font-size: 1.2rem;">
            {{ block.settings.description_text }}
          </p>
      {% endcase %}
    {% endfor %}

    <!-- Border styling -->
    <div style="border-top: 1px solid #2CB569; position: absolute; top: 0; left: 0; right: 0; z-index: 1;"></div>
    <div style="border-bottom: 1px solid #2CB569; position: absolute; bottom: 0; left: 0; right: 0; z-index: 1;"></div>
  </div>

  <!-- Right half with image -->
  <div
    class="header-image"
    style="width: 50%; padding: 20px; display: flex; align-items: center; justify-content: center;"
  >
    {% for block in section.blocks %}
      {% if block.type == 'image' %}
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url }}"
            alt="Header Image"
            width="{{ block.settings.image_width }}"
            height="{{ block.settings.image_height }}"
            style="max-width: 100%; height: auto; z-index: 0; position: relative;"
          >
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
</section>

<style>
  /* Styling for full-width section */
  #header-with-image-section {
    width: 100%;
    display: flex;
    overflow: hidden;
  }

  /* Left half text styling */
  .header-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    position: relative;
    z-index: 2; /* Ensure text is above image */
  }

  /* Right half image styling */
  .header-image {
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
