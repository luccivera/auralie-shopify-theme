{%- style -%}
  .custom-big-social-branding {
    text-align: center;
    margin: 0 auto;
  }

  .social-media-links {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
  }

  .social-media-link {
    margin: 0 10px;
  }

  .custom-button {
    display: inline-block;
    margin-top: 20px;
    padding: 10px 20px;
    background-color: var(--color-accent);
    color: white;
    text-decoration: none;
    border-radius: 5px;
  }
{%- endstyle -%}

<div class="custom-big-social-branding">
  <h2
    class="custom-heading{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
      style="--animation-order: 1;"
    {% endif %}
  >
    {{ section.blocks[0].settings.heading }}
  </h2>

  <p
    class="custom-paragraph{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
      style="--animation-order: 2;"
    {% endif %}
  >
    {{ section.blocks[1].settings.paragraph }}
  </p>

  <a
    href="{{ section.blocks[2].settings.button_link }}"
    class="custom-button{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
      style="--animation-order: 3;"
    {% endif %}
  >
    {{ section.blocks[2].settings.button_label }}
  </a>

  <div class="social-media-links">
    {%- render 'social-icons' -%}
  </div>
</div>

{% schema %}
{
  "name": "Custom Big Social Branding",
  "settings": [],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Your Heading Here"
        }
      ]
    },
    {
      "type": "paragraph",
      "name": "Paragraph",
      "settings": [
        {
          "type": "richtext",
          "id": "paragraph",
          "label": "Paragraph Text",
          "default": "Your paragraph text here."
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Click Here"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link",
          "default": "#"
        }
      ]
    },
    {
      "type": "social_media",
      "name": "Social Media Links",
      "limit": 5,
      "settings": [
        {
          "type": "url",
          "id": "link",
          "label": "Social Media Link"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Social Media Icon"
        },
        {
          "type": "text",
          "id": "platform",
          "label": "Platform Name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Big Social Branding",
      "category": "Custom"
    }
  ]
}
{% endschema %}
